---
import Layout from '../layouts/Layout.astro';

const title = 'Uninstall - Audio To Text Transcription';
const description = 'We\'re sorry to see you go. Please let us know why you\'re uninstalling.';
---

<Layout title={title} description={description}>
  <div class="uninstall-page">
    <div class="form-wrapper">
      <iframe 
        src="https://docs.google.com/forms/d/1a3Fouy41x4GRZ3tlvcPgos4YAzdUgdpp4j2Aj_HmnHg/viewform?embedded=true"
        class="iframe"
        frameborder="0"
        marginheight="0"
        marginwidth="0"
      >
        Loading…
      </iframe>
    </div>
  </div>
</Layout>

<script is:inline>
  // Устанавливаем светлую тему для страницы uninstall
  document.documentElement.setAttribute('data-theme', 'light');
  
  // Добавляем мета-теги для предотвращения индексации
  document.title = 'Uninstall - Audio To Text Transcription';
  
  // Удаляем существующий robots meta если есть
  const existingRobots = document.querySelector('meta[name="robots"]');
  if (existingRobots) {
    existingRobots.remove();
  }
  
  // Добавляем noindex
  const robotsMeta = document.createElement('meta');
  robotsMeta.name = 'robots';
  robotsMeta.content = 'noindex, nofollow';
  document.head.appendChild(robotsMeta);
</script>

<style>
  .uninstall-page {
    min-height: 100vh;
    padding: 2rem 1rem;
    background: var(--gradient-bg);
  }

  .form-wrapper {
    width: 100%;
    height: 100%;
    border-radius: 12px;
    overflow: hidden;
  }

  .iframe {
    width: 100%;
    height: 95vh;
    min-height: 650px;
    border: none;
  }

  @media (max-width: 768px) {
    .uninstall-page {
      padding: 1rem;
    }
  }
</style>


